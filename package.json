    "@mui/icons-material": "^5.15.17",
    "@mui/material": "^5.15.17",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/react-speech-recognition": "^3.9.5",
    "axios": "^1.7.2",
    "firebase": "^10.11.1",
    "i18next": "^23.11.4",
    "mic-recorder-to-mp3": "^2.2.2",
    "notistack": "^3.0.1",
    "openai": "^4.47.1",
    "react": "^18.3.1",
    "react-chat-elements": "12.0.9",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.51.4",
    "react-i18next": "^14.1.1",
    "react-query": "^3.39.3",
    "react-router-dom": "^6.23.1",
    "react-scripts": "5.0.1",
    "react-speech-kit": "^3.0.1",
    "react-speech-recognition": "^3.10.0",
    "typescript": "^4.4.2",
    "uuid": "^9.0.1",
    "web-vitals": "^2.1.0"
  },
  "scripts": {
    "start": "REACT_APP_VERSION=$npm_package_version craco start",
    "build": "REACT_APP_VERSION=$npm_package_version craco build",
    "test": "craco test -- --config=jest.config.js",
    "test:generate-output": "jest --preset=ts-jest --json --env=jsdom --outputFile=.jest-test-results.json",
    "test:coverage": "yarn test --coverage",
    "eject": "craco eject",
    "lint": "eslint src",
    "lint:fix": "yarn lint --fix",
    "prettier": "prettier src --check",
    "prettier:fix": "yarn prettier -- --write",
    "prepare": "husky install",
    "format": "prettier:fix && npm run lint:fix"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/firebase": "^3.2.1",
    "craco": "0.0.3",
    "husky": "^9.0.11",
    "prettier": "3.2.5"
  }
}
